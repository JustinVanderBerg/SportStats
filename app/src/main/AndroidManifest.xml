<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sport.justinandlauren.sportstats">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/basketball_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/basketball_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoadScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordBasketballGame"
            android:parentActivityName=".enterPlayers" />
        <activity
            android:name=".ViewGame"
            android:parentActivityName=".SelectGame" />
        <activity
            android:name=".enterPlayers"
            android:parentActivityName=".LoadScreen" />
        <activity
            android:name=".SelectGame"
            android:parentActivityName=".LoadScreen" />
        <activity
            android:name=".ViewCredits"
            android:parentActivityName=".LoadScreen" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>